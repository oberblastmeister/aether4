// Given a rectangle's area and perimeter, find if the rectangle is a square
// Plus plus is not in language 2
int main() {
  int Area = 16;
  int Perimeter = 9;

  int flag = 0;
  int x = Perimeter/2;

  if(x+x == Perimeter) {
    flag++;
  }
  if(x*x == Area) {
    flag++;
  }

  if(flag == 2) {
    return 1;
  }
  else {
    return 0;
  }
}
